font-title = 'Lato', sans-serif
font-text = 'Oswald', sans-serif
color-primary = #333
color-secondary = #8841da
color-white = #fff

contenedor()
	display: flex
	width: 90%
	margin: 0 auto
	padding: 3rem 0

caja-sombra()
	background-color: color-width
	box-shadow: 0 2rem 3.3rem 0 rgba(0, 0, 0, .2)

opacidad(color, cantidad)
	alpha(color, cantidad)

for header in 3 2 1
	h{header}
		font-size: 3.5rem - (.5*header)

titulos(fuente)
	if fuente == fuente-title
		font-family: font-title
	else
		font-family: font-text
		font-weight: 600
		text-transform: uppercas

* 
	box-sizing: border-box
	padding: 0
	margin 0

html
	font-size: 62.5%

body
	titulos(font-title)
	color: color-primary

a
	color: inherit
	text-decoration: none

